<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MotionDesk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color. -->
        <item name="colorPrimary">@color/ocra</item>
        <item name="colorPrimaryVariant">@color/skintone</item>
        <item name="colorOnPrimary">@color/darker_blue_grey</item>
        <!-- Secondary color. -->
        <item name="colorSecondary">@color/easy_red</item>
        <item name="colorSecondaryVariant">@color/blue_grey</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- StatusBar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- SplashScreen settings -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo_splash_animation</item>

        <!-- Unsorted -->
        <item name="foregroundBlackWhite">@color/white</item>
        <item name="backgroundBlackWhite">@color/black</item>
        <item name="backgroundDarkLight">@color/dark</item>
        <item name="halfTransparentBg">@color/half_black</item>
        <item name="bottomNavBarChecked">@color/ocra</item>
        <item name="bottomNavBarNotChecked">@color/gray</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="shimmerColor">@color/ocra</item>
        <item name="shimmerColorBackground">@color/darkest_grey</item>

        <item name="colorAccent">@color/ocra</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>