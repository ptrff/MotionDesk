<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LwU" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary color. -->
        <item name="colorPrimary">@color/ocra</item>
        <item name="colorPrimaryVariant">@color/skintone</item>
        <item name="colorOnPrimary">@color/darker_blue_grey</item>
        <!-- Secondary color. -->
        <item name="colorSecondary">@color/easy_red</item>
        <item name="colorSecondaryVariant">@color/blue_grey</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- StatusBar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- SplashScreen settings -->
        <item name="android:windowSplashScreenBackground">@color/splashscreen_background_dark</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_splash_anim_dark</item>

        <!-- Unsorted -->
        <item name="foregroundBlackWhite">@color/white</item>
        <item name="backgroundBlackWhite">@color/black</item>
        <item name="backgroundDarkLight">@color/darker_blue_grey</item>
        <item name="bottomNavBarChecked">@color/ocra</item>
        <item name="bottomNavBarNotChecked">@color/grey</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>
</resources>